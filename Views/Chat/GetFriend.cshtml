@model IEnumerable<ChatManager.Models.Friendship>
@{
    int idFriend = -1;
    if (Session["idFriendChat"] != null)
    {
        idFriend = (int)Session["idFriendChat"];
    }

    foreach (ChatManager.Models.Friendship item in Model)
    {
        string userContainer = "unselectedTarget";
        if (idFriend == item.IdFriend) {
            userContainer = "selectedTarget";
        }
        <div class=@userContainer>
            <div id="?idFriend=@item.IdFriend" class="Friend userContainer" style="font-size:14px;">
                @Helper.AvatarUserIcon(item.Friend, "UserSmallAvatar")
            </div>
        </div>
    }
}

